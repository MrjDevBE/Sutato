@page "/notfound"


<div class="error-page d-flex flex-column justify-content-center align-items-center text-center vh-100 bg-light">
    <div class="p-4">
        <h1 class="display-4 text-danger">404 - Page Not Found</h1>
        <p class="lead text-muted">Oops! The page you’re looking for doesn’t exist or has been moved.</p>
        <button class="btn btn-primary btn-lg mt-3" @onclick="GoHome">Go Home</button>
    </div>
</div>



@code {
    [Inject] NavigationManager Nav { get; set; }

    void GoHome() => Nav.NavigateTo("/overview");
}
